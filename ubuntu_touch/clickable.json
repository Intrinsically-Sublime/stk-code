{
  "clickable_minimum_required": "6.23.2",
  "builder": "cmake",
  "root_dir": "../../",
  "src_dir": "${ROOT}/stk-code/",
  "build_dir": "build/${ARCH_TRIPLET}/app",
  "kill": "stk",
  "dependencies_target": [
       "libsdl2-dev",
       "libcurl4-openssl-dev",
       "libenet-dev",
       "libharfbuzz-dev",
       "libfribidi-dev",
       "libgles2-mesa-dev",
       "libjpeg-dev",
       "libogg-dev",
       "libopenal-dev",
       "libpng-dev",
       "libssl-dev",
       "libvorbis-dev",
       "nettle-dev",
       "zlib1g-dev",
       "libbluetooth-dev",
       "libpthread-stubs0-dev",
       "libpthread-workqueue-dev",
       "libfreetype6-dev",
       "libbullet-dev"
  ],
  "dependencies_host": [
       "pkg-config",
       "cmake-data"
  ],
  "image_setup": {
      "run": [
      ]
  },
  "install_data": {
      "${SRC_DIR}/ubuntu_touch/manifest.json": "${INSTALL_DIR}",
      "${SRC_DIR}/ubuntu_touch/stk.apparmor": "${INSTALL_DIR}",
      "${SRC_DIR}/ubuntu_touch/stk.desktop": "${INSTALL_DIR}",
      "${SRC_DIR}/ubuntu_touch/icon.png": "${INSTALL_DIR}"
},
  "build_args": [
      "-DPKG_CONFIG_EXECUTABLE=/usr/bin/pkg-config",
      "-DUSE_GLES2=ON",
      "-DNO_IRR_COMPILE_WITH_OPENGL_=ON",
      "-DBUILD_RECORDER=OFF",
      "-DSTK_ASSETS_DIR=${ROOT}/stk-assets",
      "-DCHECK_ASSETS=ON",
      "-DENABLE_WIIUSE=OFF",
      "-DENABLE_IPV6=OFF",
      "-DMOBILE_STK=ON"
  ]
}
